<!-- ANGARAH Product Details Section -->

<div class="angarah-product-details" id="product-details">
  <div class="page-width">
    <div class="angarah-product-grid">
      <div class="angarah-product-info">
        <h2>{{ section.settings.heading | default: 'Meet the TravX' }}</h2>
        <p>{{ section.settings.description | default: 'Compact design meets powerful performance.' }}</p>

        <ul class="angarah-specs">
          <li>
            <span class="angarah-spec-label">Weight</span>
            <span class="angarah-spec-value">{{ section.settings.weight | default: '12 lbs' }}</span>
          </li>
          <li>
            <span class="angarah-spec-label">Dimensions</span>
            <span class="angarah-spec-value">{{ section.settings.dimensions | default: "18 x 12 x 8 inches" }}</span>
          </li>
          <li>
            <span class="angarah-spec-label">Heat-up Time</span>
            <span class="angarah-spec-value">{{ section.settings.heat_up_time | default: 'Under 5 minutes' }}</span>
          </li>
          <li>
            <span class="angarah-spec-label">Cooking Surface</span>
            <span class="angarah-spec-value">{{ section.settings.cooking_surface | default: '200 sq inches' }}</span>
          </li>
          <li>
            <span class="angarah-spec-label">Fuel Type</span>
            <span class="angarah-spec-value">{{ section.settings.fuel_type | default: 'Propane' }}</span>
          </li>
          <li>
            <span class="angarah-spec-label">Material</span>
            <span class="angarah-spec-value">{{ section.settings.material | default: 'Stainless Steel' }}</span>
          </li>
        </ul>

        {% if section.settings.button_text != blank %}
          <a
            href="{{ section.settings.button_link | default: '#' }}"
            class="btn angarah-cta-button"
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>

      <div class="angarah-product-gallery">
        <div class="angarah-gallery-main">
          {% if section.settings.product_image %}
            <img
              src="{{ section.settings.product_image | image_url: width: 600 }}"
              alt="ANGARAH TravX Product Details"
              width="600"
              height="450"
              loading="lazy"
            >
          {% else %}
            <div style="aspect-ratio: 4/3; background: var(--color-theme-hover); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
              <span style="color: var(--color-theme-muted);">Product Image</span>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "ANGARAH Product Details",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Meet the TravX",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "default": "Compact design meets powerful performance. The TravX is your perfect companion for camping, tailgating, beach days, and backyard gatherings.",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product image"
    },
    {
      "type": "text",
      "id": "weight",
      "default": "12 lbs",
      "label": "Weight"
    },
    {
      "type": "text",
      "id": "dimensions",
      "default": "18 x 12 x 8 inches",
      "label": "Dimensions"
    },
    {
      "type": "text",
      "id": "heat_up_time",
      "default": "Under 5 minutes",
      "label": "Heat-up time"
    },
    {
      "type": "text",
      "id": "cooking_surface",
      "default": "200 sq inches",
      "label": "Cooking surface"
    },
    {
      "type": "text",
      "id": "fuel_type",
      "default": "Propane",
      "label": "Fuel type"
    },
    {
      "type": "text",
      "id": "material",
      "default": "Stainless Steel",
      "label": "Material"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "ANGARAH Product Details"
    }
  ]
}
{% endschema %}
